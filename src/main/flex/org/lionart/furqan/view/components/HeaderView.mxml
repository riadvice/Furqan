<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:uicontrol="org.lionart.furqan.uicontrol.*">
    <fx:Script>
        <![CDATA[
            import org.lionart.furqan.conf.EmbeddedAssets;
            import org.lionart.furqan.events.ApplicationEvent;

            protected function closeButton_clickHandler( event : MouseEvent ) : void
            {
                dispatchEvent(new ApplicationEvent(ApplicationEvent.CLOSE_APPLICATION));
            }
        ]]>
    </fx:Script>
    <fx:Declarations>
        <!-- Place non-visual elements (e.g., services, value objects) here -->
    </fx:Declarations>

    <uicontrol:BaseButton id="closeButton" icon="{EmbeddedAssets.CROSS}" click="closeButton_clickHandler(event)"/>

</s:Group>
